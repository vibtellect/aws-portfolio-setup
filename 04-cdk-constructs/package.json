{
  "name": "aws-cdk-constructs-library",
  "version": "2.0.0",
  "description": "Production-ready CDK Constructs Library with primitives and patterns",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch --verbose",
    "test:tdd": "jest --watch --verbose --coverage=false",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:construct": "jest --testPathPattern",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "tsc --build --clean && rm -rf */*/node_modules",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write '**/*.{ts,json,md}'",
    "validate": "npm run build && npm run test",
    "scaffold": "node ../scripts/create-construct.js"
  },
  "workspaces": [
    "primitives/*/*",
    "patterns/*/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "constructs",
    "infrastructure-as-code",
    "typescript",
    "aws-cdk",
    "cloud",
    "iac"
  ],
  "author": "Vitalij",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibtellect/aws-portfolio-setup"
  }
}
